# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#module:testrunner

# Home
GET     /                                       App.Index
GET     /home                                   App.Index
GET     /index                                  App.Index

GET     /items                            		Items.List
GET     /items/list                            	Items.List
GET     /items/:id                          	Items.Show
POST    /items                              	Items.Add
PUT     /items/:id                          	Items.Update
DELETE  /items/:id                        		Items.Delete

# User register & login
GET 	/register								Auth.Register
POST 	/register								Auth.DoRegister
GET 	/join 									Auth.Join
POST 	/join 									Auth.DoJoin
GET 	/logout									Auth.Logout
GET 	/login									Auth.Login
POST 	/login									Auth.DoLogin
*		/activate								Auth.Activate

GET 	/admin/users 							Admin.Users
GET 	/users							  		User.Accounts2
GET 	/users/:id 								User.Account
GET 	/users/:id/join 						User.Join
POST 	/users/:id/join 						User.DoJoin
GET     /inventory/                             App.Inventory

#GET     /inventory/:id                          InventoryCtrl.Get
#POST    /inventory                              InventoryCtrl.Add
#PUT     /inventory/:id                          InventoryCtrl.Update
#DELETE  /inventory/:id                          InventoryCtrl.Delete
#GET     /inventories                            InventoryCtrl.List

# Web API
# Add a new VIP POST /users
POST 	/members 								User.AddVip
# Update VIP info PUT /users/:id
POST 	/members/:id 							User.UpdateVip
# Update user items POST /useritems
POST 	/useritems								User.UpdateItems
# Get user items GET /useritems/:id
GET 	/useritems/:id 							User.Items
GET 	/feedback 								User.FeedBack
GET 	/bind 									User.Bind

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/*filepath                       Static.Serve("public")
GET     /js/*filepath                       	Static.Serve("public/js")
GET     /images/*filepath                       Static.Serve("public/images")
GET     /img/*filepath                      	Static.Serve("public/img")
GET     /css/*filepath                       	Static.Serve("public/css")

# Catch all
*       /:controller/:action                    :controller.:action
